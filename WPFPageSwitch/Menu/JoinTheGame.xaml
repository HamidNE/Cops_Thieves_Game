<UserControl x:Class="WPFPageSwitch.Menu.JoinTheGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFPageSwitch.Menu"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="750">
    <Grid Background="White">
        <Label x:Name="label" Content="Enter Your Name :" HorizontalAlignment="Left" Height="30.883" Margin="194.118,120.22,0,0" VerticalAlignment="Top" Width="116.911"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="30.883" Margin="376.103,120.22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156.618"/>
        <Button x:Name="JoinCopBtn" Content="Join As Cop" HorizontalAlignment="Left" Height="36.397" Margin="143.382,251.471,0,0" VerticalAlignment="Top" Width="191.912" Click="JoinCopBtn_Click"/>
        <Button x:Name="JoinThiefBtn" Content="Join As Thief" HorizontalAlignment="Left" Height="36.397" Margin="405.882,251.471,0,0" VerticalAlignment="Top" Width="191.912" Click="JoinThiefBtn_Click"/>
        <Button x:Name="BackBtn" Content="Back" HorizontalAlignment="Left" Height="25.368" Margin="489.779,422.72,0,0" VerticalAlignment="Top" Width="108.015" Click="button_Click"/>

    </Grid>
</UserControl>
